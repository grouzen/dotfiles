;;; -*- lisp -*-
(in-package :stumpwm)

;; common font
(set-font "-*-terminus-*-*-*-*-12-*-*-*-*-*-iso10646-1")


;; modules
(load "/usr/share/common-lisp/source/stumpwm/contrib/mem.lisp")
(load "/usr/share/common-lisp/source/stumpwm/contrib/net.lisp")
(load "/usr/share/common-lisp/source/stumpwm/contrib/cpu.lisp")

;; mode-line colors
(setf *mode-line-background-color* "black")
(setf *mode-line-foreground-color* "blue")
(setf *mode-line-border-color* "green")
(setf *mode-line-timeout* 1)

(setf *screen-mode-line-format*
	  (list "[ "
			'(:eval (run-shell-command
						  "date '+%a %d %b %H:%M:%S' | tr -d [:cntrl:]"
						  t))
			" ] "
			"[ %n ] "
			"[%c] " ;; cpu
            "[%t] " ;; cpu temp
			"[%M] " ;; mem
            "[%P] " ;; swap
			"[%l] " ;; net
			"%W"))

(run-commands "mode-line"
              "gnewbg 2"
              "gnewbg 3"
              "gnewbg 4"
              "gnewbg 5"
              "gnewbg 6"
              "gnewbg 7"
              "gnewbg 8"
              "gnewbg 9")

;; input and message panels
(set-bg-color "black")
(set-fg-color "green")
(set-border-color "green")
(setf *message-window-gravity* :bottom-right)
(setf *input-window-gravity* :bottom-right)
(set-normal-gravity :center)
(set-win-bg-color "black")

(set-focus-color "green")
(set-unfocus-color "blue")

(setf *frame-number-map* "1234567890")
(setf (group-name (first (screen-groups (current-screen)))) "1")

;; keys
(define-key *root-map* (kbd "C-c") "exec urxvt")
(define-key *root-map* (kbd "c") "exec urxvt")

